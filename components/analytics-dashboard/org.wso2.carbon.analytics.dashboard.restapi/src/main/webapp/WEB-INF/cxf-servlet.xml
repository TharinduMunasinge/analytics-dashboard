<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">
	
	<jaxrs:server id="analyticsServices" address="/">
		<jaxrs:serviceBeans>
			<ref bean="dashboardBean"/>
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<ref bean="jacksonJsonProvider"/>
			<ref bean="analyticsExceptionMapper"/>
			<ref bean="analyticsIndexExceptionMapper"/>
			<ref bean="analyticsTableNotFoundExceptionMapper"/>
			<ref bean="analyticsTimeoutExceptionMapper"/>				
		</jaxrs:providers>
        <!--<jaxrs:inInterceptors>-->
            <!--<ref bean="analyticsAuthenticationInterceptor"/>-->
        <!--</jaxrs:inInterceptors>-->
	</jaxrs:server>
	
	<bean id="dashboardBean" class="org.wso2.carbon.analytics.dashboard.restapi.resources.DashboardResource"/>
	<bean id="analyticsExceptionMapper" 
			class="org.wso2.carbon.analytics.dashboard.restapi.providers.AnalyticsExceptionMapper"/>
	<bean id="analyticsIndexExceptionMapper" 
			class="org.wso2.carbon.analytics.dashboard.restapi.providers.AnalyticsIndexExceptionMapper"/>
	<bean id="analyticsTableNotFoundExceptionMapper" 
			class="org.wso2.carbon.analytics.dashboard.restapi.providers.AnalyticsTableNotFoundExceptionMapper"/>
	<bean id="analyticsTimeoutExceptionMapper" 
			class="org.wso2.carbon.analytics.dashboard.restapi.providers.AnalyticsTimeoutExceptionMapper"/>
    <bean id="analyticsAuthenticationInterceptor"
            class="org.wso2.carbon.analytics.dashboard.restapi.interceptor.AnalyticsAuthenticationInterceptor"/>
	<bean id="jacksonJsonProvider" class="com.fasterxml.jackson.jaxrs.json.JacksonJaxbJsonProvider"/>
</beans>
